{
  "files": [],
  "references": [
    { "path": "./tsconfig.app.json" },
    { "path": "./tsconfig.node.json" }
  ],
  "compilerOptions": {
    "target": "es2020", 
    "lib": ["dom", "dom.iterable", "esnext"],
    "jsx": "react-jsx", 
    "module": "esnext",
    "moduleResolution": "node", 
    "resolveJsonModule": true,
    "allowJs": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noEmit": true, 
    "skipLibCheck": true 
  },
}
